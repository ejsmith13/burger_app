<div class="container">

    <h1>Burger Log!</h1>
    <img id="burgerPic"
        src="https://media1.s-nbcnews.com/j/newscms/2019_21/2870431/190524-classic-american-cheeseburger-ew-207p_d9270c5c545b30ea094084c7f2342eb4.fit-2000w.jpg"
        alt="hamburger" />

    <section class="row">
        <div class="col-md-6">
            <h2>Burger Wish List</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{ id }}: {{ burger_name}}

                    <button class="devoured-btn btn btn-primary" data-id="{{id}}" data-eaten="{{devoured}}">
                        Devour It!
                    </button>


                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h2>Burgers eaten!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </section>


    <h2>Add a Burger</h2>
    <form id="create-form">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="name">
        </div>
        <button class=" btn btn-primary" type="submit" id="submitBtn">Add a Burger</button>
    </form>

</div>